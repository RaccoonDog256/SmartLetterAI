{
  "manifest_version": 3,
  "name": "LetterChanger AI",
  "version": "1.2",
  "description": "AIを使ってメール本文を要約します。",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["https://api.openai.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon_16x16_blue.png",
    "48": "icon_48x48_blue.png",
    "128": "icon_128x128_blue.png"
  }
}
